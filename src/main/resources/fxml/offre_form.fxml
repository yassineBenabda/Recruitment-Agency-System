<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.*?>

<VBox spacing="15" alignment="CENTER" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.agence.recruitment.controller.OffreFormController" style="-fx-padding: 20;">
    <Label text="Ajouter une Offre d'Emploi" style="-fx-font-size: 18px;" />
    <GridPane hgap="10" vgap="10">
        <Label text="Titre:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <TextField fx:id="titreField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

        <Label text="Description:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <TextArea fx:id="descriptionArea" GridPane.rowIndex="1" GridPane.columnIndex="1" prefRowCount="4" prefColumnCount="20"/>

        <Label text="Compétence demandée:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
        <TextField fx:id="competenceField" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

        <Label text="ID Recruteur:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
        <TextField fx:id="recruteurIdField" GridPane.rowIndex="3" GridPane.columnIndex="1"/>
    </GridPane>
    <Button text="Enregistrer" onAction="#handleSave" maxWidth="150"/>
</VBox>
