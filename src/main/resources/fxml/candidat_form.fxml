<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.*?>

<VBox spacing="15" alignment="CENTER" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.agence.recruitment.controller.CandidatFormController" style="-fx-padding: 20;">
    <Label text="Ajouter un Candidat" style="-fx-font-size: 18px;" />
    <GridPane hgap="10" vgap="10">
        <Label text="Nom:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <TextField fx:id="nomField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

        <Label text="Email:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <TextField fx:id="emailField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

        <Label text="Date de naissance:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
        <DatePicker fx:id="dateNaissancePicker" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

        <Label text="CV (PDF):" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
        <Button text="Télécharger CV" fx:id="uploadCVButton" GridPane.rowIndex="3" GridPane.columnIndex="1"/>
        <Label fx:id="cvFileNameLabel" GridPane.rowIndex="4" GridPane.columnIndex="1"/>
    </GridPane>
    <Button text="Enregistrer" onAction="#handleSave" maxWidth="150"/>
</VBox>
